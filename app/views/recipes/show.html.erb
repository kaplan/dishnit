<div class="container">
<div class="recipe-detail">
<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @recipe.photo_url, :class => 'recipe-picture' %>
</p>

<p>
  <b>Name:</b>
  <%= @recipe.name %>
</p>

<p>
  <b>Description:</b>
  <%= @recipe.description %>
</p>

<p>
  <b>Ingredients:</b>
  <%= @recipe.ingredients %>
</p>

<p>
  <b>Directions:</b>
  <%= @recipe.directions %>
</p>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', cookbook_url(@recipe.cookbook_id) %>

</div>
<footer></footer>
</div>
